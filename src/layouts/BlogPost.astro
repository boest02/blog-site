---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import HeaderLink from "../components/HeaderLink.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage, author } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead
      title={"Blog - " + title}
      description={description}
      image={heroImage}
    />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 900px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        padding-block: 0.5em;
        text-align: center;
        line-height: 1;
      }

      .menu-links {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        .mailing-list {
          display: flex;
          gap: 10px;
          place-content: center;
          width: fit-content;
          padding: 10px 15px;
          text-decoration: none;
          border: 2px solid hsla(var(--font-color), 1);
          border-radius: 10px;
          box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12), 0 1.5px 4px rgba(0, 0, 0, 0.10);

          &:hover {
            font-weight: bold;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15), 0 2px 6px rgba(0, 0, 0, 0.10);
          }

          span {
            place-content: center;
          }
        }
      }

      @media (max-width: 720px) {
        .title h1 {
          font-size: 2.2rem;
        }
      }
      .date {
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      .meta-data {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        margin-block: 0.5em;
        dl:not(:last-child)::after {
          content: "/";
          color: #000;
          font-size: 1.2em;
        }
      }

      hr {
        border-top: 1px solid #000;
      }

      dl {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-block: 10px;
        dd {
          margin-inline: 0;
          font-style: italic;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            <div class="meta-data">
              <dl class="date">
                <dt>posted:</dt>
                <dd><FormattedDate date={pubDate} /></dd>
              </dl>

              {
                updatedDate && (
                  <dl class="last-updated-on">
                    <dt>last updated on:</dt>
                    <dd>
                      <FormattedDate date={updatedDate} />
                    </dd>
                  </dl>
                )
              }
              <dl class="author">
                <dt>author:</dt>
                <dd>{author ? author : "Jessica Reilly"}</dd>
              </dl>
            </div>
            <h1 class="title">{title}</h1>
            <hr />
          </div>
          <slot />
          <nav class="menu-links">
            <a
              href="https://forms.gle/YDt2f4WFqfBzB2mr5"
              target="_blank"
              title="Join My Email List"
              class="mailing-list"
              role="button"
            >
              <span>Want more? Join the Email list</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="40"
                height="40"
                viewBox="0 0 64 64"
                fill="currentColor"
              >
                <path
                  d="M8 16c-2.2 0-4 1.8-4 4v24c0 2.2 1.8 4 4 4h48c2.2 0 4-1.8 4-4V20c0-2.2-1.8-4-4-4H8zm0 4h48l-24 18L8 20zm0 4.8l19.7 14.8c1.4 1 3.2 1 4.6 0L56 24.8V44H8V24.8z"
                ></path>
              </svg>
            </a>
            <HeaderLink href="/blog">back to posts...</HeaderLink>
          </nav>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
